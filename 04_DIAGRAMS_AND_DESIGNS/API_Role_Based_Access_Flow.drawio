<mxfile host="app.diagrams.net">
  <diagram name="API Role-Based Access Flow" id="api-flow">
    <mxGraphModel>
      <root>
        <mxCell id="0" />
        <mxCell id="1" parent="0" />
        
        <!-- Start -->
        <mxCell id="2" value="Start" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="120" y="20" width="120" height="50" as="geometry" />
        </mxCell>
        
        <!-- Validate Structure -->
        <mxCell id="3" value="Validate Request Structure" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="100" width="160" height="50" as="geometry" />
        </mxCell>
        
        <!-- Validate Parameters -->
        <mxCell id="4" value="Validate Request Parameters" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="180" width="160" height="50" as="geometry" />
        </mxCell>
        
        <!-- Decision: Visitor? -->
        <mxCell id="5" value="Is userRole = 'visitor'?" style="rhombus;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="260" width="160" height="80" as="geometry" />
        </mxCell>
        
        <!-- Visitor Path -->
        <mxCell id="6" value="Allow Access to Public Endpoints" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="-120" y="370" width="200" height="50" as="geometry" />
        </mxCell>
        <mxCell id="7" value="Return Data for Search, Visualization, Statistics" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="-120" y="450" width="200" height="70" as="geometry" />
        </mxCell>
        <mxCell id="8" value="End" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="-80" y="550" width="120" height="50" as="geometry" />
        </mxCell>
        
        <!-- Admin Decision -->
        <mxCell id="9" value="Is userRole = 'admin'?" style="rhombus;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="350" y="370" width="160" height="80" as="geometry" />
        </mxCell>
        
        <!-- Admin Path -->
        <mxCell id="10" value="Allow Access to All Endpoints" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="350" y="480" width="200" height="50" as="geometry" />
        </mxCell>
        <mxCell id="11" value="Process Data Modification, User Management, System Configuration" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="350" y="560" width="250" height="70" as="geometry" />
        </mxCell>
        <mxCell id="12" value="End" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="400" y="660" width="120" height="50" as="geometry" />
        </mxCell>
        
        <!-- Invalid Role -->
        <mxCell id="13" value="Deny Access: Invalid Role" style="rounded=0;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="650" y="480" width="200" height="50" as="geometry" />
        </mxCell>
        <mxCell id="14" value="End" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="690" y="560" width="120" height="50" as="geometry" />
        </mxCell>
        
        <!-- Connectors -->
        <mxCell id="c1" edge="1" parent="1" source="2" target="3"><mxGeometry relative="1" as="geometry" /></mxCell>
        <mxCell id="c2" edge="1" parent="1" source="3" target="4"><mxGeometry relative="1" as="geometry" /></mxCell>
        <mxCell id="c3" edge="1" parent="1" source="4" target="5"><mxGeometry relative="1" as="geometry" /></mxCell>
        
        <!-- Visitor Yes -->
        <mxCell id="c4" edge="1" parent="1" source="5" target="6">
          <mxGeometry relative="1" as="geometry"><mxPoint x="-20" y="0" as="offset" /></mxGeometry>
        </mxCell>
        <mxCell id="c5" edge="1" parent="1" source="6" target="7"><mxGeometry relative="1" as="geometry" /></mxCell>
        <mxCell id="c6" edge="1" parent="1" source="7" target="8"><mxGeometry relative="1" as="geometry" /></mxCell>
        
        <!-- Visitor No to Admin Decision -->
        <mxCell id="c7" edge="1" parent="1" source="5" target="9">
          <mxGeometry relative="1" as="geometry"><mxPoint x="200" y="0" as="offset" /></mxGeometry>
        </mxCell>
        
        <!-- Admin Yes -->
        <mxCell id="c8" edge="1" parent="1" source="9" target="10"><mxGeometry relative="1" as="geometry" /></mxCell>
        <mxCell id="c9" edge="1" parent="1" source="10" target="11"><mxGeometry relative="1" as="geometry" /></mxCell>
        <mxCell id="c10" edge="1" parent="1" source="11" target="12"><mxGeometry relative="1" as="geometry" /></mxCell>
        
        <!-- Admin No -->
        <mxCell id="c11" edge="1" parent="1" source="9" target="13">
          <mxGeometry relative="1" as="geometry"><mxPoint x="200" y="0" as="offset" /></mxGeometry>
        </mxCell>
        <mxCell id="c12" edge="1" parent="1" source="13" target="14"><mxGeometry relative="1" as="geometry" /></mxCell>
        
      </root>
    </mxGraphModel>
  </diagram>
